
<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>

<!-- Content for Edit Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Assignment Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Tournament Name" name="name" value="<%= tournament.name %>" required>
                </div>
                <div class="form-group">
                    <label for="typeTextField">Subject</label>
                    <input type="text" class="form-control" id="typeTextField" placeholder="Enter the Tournament Type" name="type" value="<%= tournament.type %>" required>
                </div>
                <div class="form-group">
                    <label for="statusTextField">Due Date</label>
                    <input type="text" class="form-control" id="statusTextField" placeholder="Enter the Tournament Status" name="status" value="<%= tournament.status %>" required>
                </div>
                <div class="form-group">
                    <label for="participantsTextField">Participants</label>
                    <input type="number" class="form-control" id="participantsTextField" placeholder="Enter the number of Participants" name="participants" value="<%= tournament.participants %>" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Tournament Date</label>
                    <input type="date" class="form-control" id="dateTextField" name="date" value="<%= new Date(tournament.date).toISOString().split('T')[0] %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Tournament Description</label>
                    <textarea class="form-control" id="descriptionTextArea" placeholder="Enter the Tournament Description" name="description" required><%= tournament.description %></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                    <i class="fas fa-edit"></i>
                </button>  
                <button class="btn btn-warning" type="button" onclick="window.location.href='/tournament'">Cancel
                    <i class="fas fa-undo"></i>
                </button>    
            </form>
        </div>
    </div>
</div>

<%- include ../Partials/footer.ejs%>
