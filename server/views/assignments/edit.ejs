<%- include ('../Partials/header.ejs')%>
<%- include ('../Partials/main_nav.ejs') %>

<!-- Content for Edit Assignment Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="assignmentNameField">Assignment Name</label>
                    <input type="text" class="form-control" id="assignmentNameField" 
                           placeholder="Enter the Assignment Name" name="name" value="<%= assignment.name %>" required>
                </div>
                
                <div class="form-group">
                    <label for="courseNameField">Course Name</label>
                    <input type="text" class="form-control" id="courseNameField" 
                           placeholder="Enter the Course Name" name="subject" value="<%= assignment.subject %>" required>
                </div>
                
                <div class="form-group">
                    <label for="statusField">Status</label>
                    <select class="form-control" id="statusField" name="status" required>
                        <option value="Pending" <%= assignment.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                        <option value="In Progress" <%= assignment.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="Completed" <%= assignment.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="dueDateField">Due Date</label>
                    <input type="date" class="form-control" id="dueDateField" 
                           name="dueDate" value="<%= new Date(assignment.dueDate).toISOString().split('T')[0] %>" required>
                </div>
                
                <div class="form-group">
                    <label for="priorityField">Priority</label>
                    <select class="form-control" id="priorityField" name="priority" required>
                        <option value="High" <%= assignment.priority === 'High' ? 'selected' : '' %>>High</option>
                        <option value="Medium" <%= assignment.priority === 'Medium' ? 'selected' : '' %>>Medium</option>
                        <option value="Low" <%= assignment.priority === 'Low' ? 'selected' : '' %>>Low</option>
                    </select>
                </div>
                
                <button class="btn btn-primary" type="submit">
                    Submit <i class="fas fa-edit"></i>
                </button>
                <button class="btn btn-warning" type="button" onclick="window.location.href='/track'">
                    Cancel <i class="fas fa-undo"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<%- include ../Partials/footer.ejs %>
