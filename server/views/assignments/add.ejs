<%- include ('../Partials/header.ejs') %>
<%- include ('../Partials/main_nav.ejs') %>

<!-- Content for Add Assignment Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="assignmentNameField">Assignment Name</label>
                    <input type="text" class="form-control" id="assignmentNameField" placeholder="Enter the Assignment Name" name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="courseNameField">Subject</label>
                    <input type="text" class="form-control" id="SubjectField" placeholder="Enter the Subject" name="subject" required>
                </div>
                
                <div class="form-group">
                    <label for="statusField">Status</label>
                    <select class="form-control" id="statusField" name="status" required>
                        <option value="" disabled selected>Select Status</option>
                        <option value="Pending">Pending</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="dueDateField">Due Date</label>
                    <input type="date" class="form-control" id="dueDateField" name="dueDate" required>
                </div>
                
                <div class="form-group">
                    <label for="priorityField">Priority</label>
                    <select class="form-control" id="priorityField" name="priority" required>
                        <option value="" disabled selected>Select Priority</option>
                        <option value="High">High</option>
                        <option value="Medium">Medium</option>
                        <option value="Low">Low</option>
                    </select>
                </div>
                
                <button class="btn btn-primary" type="submit">
                    Submit <i class="fas fa-edit"></i>
                </button>
                <button class="btn btn-warning" type="button" onclick="window.location.href='/track'">
                    Cancel <i class="fas fa-undo"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<%- include ('../Partials/footer.ejs')%>
